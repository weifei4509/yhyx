<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll_popup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true">

    <LinearLayout
       android:padding="15dp"
        android:id="@+id/linearPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout

            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:id="@+id/rl_rule_function"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <TextView
              android:textStyle="bold"
              android:layout_marginBottom="15dp"
              android:textColor="@android:color/black"
          android:layout_centerHorizontal="true"
              android:text="请选择支付方式"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              />
         <ImageView
             android:id="@+id/iv_close"
             android:layout_alignParentRight="true"

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/close_gray"/>
        </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/bg_gray"/>
  <RelativeLayout
      android:id="@+id/rl_zhifubao"
      android:gravity="center_vertical"
       android:layout_marginTop="15dp"
      android:layout_marginBottom="15dp"
      android:layout_width="wrap_content"
      android:layout_height="match_parent">
      <ImageView
          android:id="@+id/iv"
          android:src="@mipmap/icon_zhifubao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
       <TextView
           android:textColor="@android:color/black"
           android:layout_toRightOf="@+id/iv"
           android:layout_marginLeft="16dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="支付宝支付"/>
      <ImageView
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:src="@mipmap/next"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
  </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"/>
        <RelativeLayout
            android:id="@+id/rl_weixin"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv1"
                android:src="@mipmap/icon_wechat_zhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/iv1"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
