<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context="com.cheapest.lansu.cheapestshopping.view.activity.NewPasswordActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@mipmap/icon_password_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_activity_register_phone"
                android:hint="请输入新密码"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#ffcccccc"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@mipmap/icon_password_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_activity_register_psw"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:hint="请再次输入新密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="#ffcccccc"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_activity_register_commit"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@drawable/text_gridient_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"/>
</LinearLayout>
