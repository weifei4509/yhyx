<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/transparent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_corner_white"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/shengji_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现新版本啦~"
                android:textColor="@android:color/white"
                />
            <Button
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:drawableLeft="@mipmap/icon_close"
                android:id="@id/versionchecklib_version_dialog_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

        </RelativeLayout>


        <TextView

            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新内容"
            android:textStyle="bold"

            />
        <TextView
            android:padding="15dp"
            android:id="@+id/tv_msg"

            android:lineSpacingExtra="4dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"/>

        <Button
            android:id="@id/versionchecklib_version_dialog_commit"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="立即升级"
            android:textColor="@android:color/white"
            android:background="@drawable/text_gridient_theme"

            />

    </LinearLayout>

</LinearLayout>