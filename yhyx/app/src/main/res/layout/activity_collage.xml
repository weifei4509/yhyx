<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/layout_collage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_collage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/selector_icon_pintuan"
                    android:drawablePadding="6dp"
                    android:enabled="true"
                    android:text="今日拼团"
                    android:textColor="@color/color_gray_pink_select"
                    android:textSize="@dimen/sp_14"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_gray"/>

            <RelativeLayout
                android:id="@+id/layout_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/selector_icon_find_order"
                    android:drawablePadding="6dp"
                    android:enabled="false"
                    android:text="我的订单"
                    android:textColor="@color/color_gray_pink_select"
                    android:textSize="@dimen/sp_14"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_gray"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>